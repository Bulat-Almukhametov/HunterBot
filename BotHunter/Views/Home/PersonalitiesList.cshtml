@model IEnumerable<BotHunter.Models.Personality>

@{
    ViewBag.Title = "База кандидатов";
}

<h2>База кандидатов</h2>

<p>
    <a class="button success" href="~/Home/Personality"><i class="fi-plus"></i> Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telegram)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th></th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Name, "Personality", new { id = item.Id })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telegram)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.ActionLink("Редактировать", "Personality", new { id = item.Id }, new { @class = "button" })
                @Html.ActionLink("Удалить", "Delete", new { id = item.Id }, new { @class = "button alert" })
            </td>
        </tr>
    }

</table>
